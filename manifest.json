{
  "manifest_version": 3,
  "name": "Bookmarks Checker - Duplicate and Dead Links",
  "description": "Check your bookmarks for duplicates or dead links.",
  "devtools_page": "src/pages/panel/index.html",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "public/bookmark.png"
    }
  },
  "icons": {
    "128": "public/bookmark.png"
  },
  "permissions": ["bookmarks", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "web_accessible_resources": [
    {
      "resources": ["bookmark.png"],
      "matches": []
    }
  ]
}
